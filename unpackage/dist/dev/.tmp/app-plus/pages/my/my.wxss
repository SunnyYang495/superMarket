
.my{
	height: 100%;
	background: #dadada;
}
.info{
	height: 100px;
	background: url(../../static/img/head.387c08b3.jpg) no-repeat center;
	background-color: rgba(0, 0, 0, 0.6) ;
	background-size: 100%;
	background-clip: content-box;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	/* opacity:0.4;
	filter:alpha(opacity=40); */
}
.head{
	width:30%;
	text-align: right;
	padding:10px;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.head ._img{
	width: 150rpx;
	height: 150rpx;
	-webkit-border-radius:50% ;
	        border-radius:50% ;
}
.basicInfo{
	width:70%;
	padding:10px;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.nickName{
	margin-bottom:10px;
}
.nick{
	background: #ABABAB;
	color: #fff;
	opacity:1;
	filter:alpha(opacity=100);
}
.phone{
	opacity:1;
	filter:alpha(opacity=100);
}
.funct{
	background: #fff;
	height: 80rpx;
	line-height: 80rpx;
	border-top:1px solid #eee;
	padding:0 10px;
}
.functIcon{
	width:10%;
}
.functIcon ._span{
	font-size: 44rpx;
}
.functName{
	width:75%;
	text-align: left;
}
.functEnter{
	width:15%;
	text-align: right;
}
.otherFunct{
	margin: 10px 0;
}
.logOut{
	height: 80rpx;
	line-height: 80rpx;
	color:red;
	background: #fff;
	margin:15px 0;
	text-align: center;
}
.mask{
	width:100%;
	height: 100%;
	position: fixed;
	left: 0;
	top:0;
	background:rgba(0,0,0,0.5);
}
.confirmBox{
	width:80%;
	background: #fff;
	margin: 400rpx auto 0;
	-webkit-border-radius:5px ;
	        border-radius:5px ;
	text-align: center;
}
.hintTitle{
	height: 100rpx;
	line-height: 100rpx;
	font-weight: bold;
}
.hintMsg{
	height: 120rpx;
	/* line-height: 120upx; */
	font-size: 30rpx;
	margin-top: 20rpx;
}
.operate{
	height: 100rpx;
	line-height: 100rpx;
	color:#3AA7F8;
	border-top: 1px solid #DADADA;
}
.operateBtn{
	width:50%;
}
.cancelDel{
	border-right:1px solid #DADADA ;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}

