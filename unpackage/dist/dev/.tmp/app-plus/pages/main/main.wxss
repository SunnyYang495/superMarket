
.mainBox{
	background:#eee;
}
.searchBox{
	width:100%;
	height:40px;
	line-height: 40px;
	color:#ababab;
	font-size: 28rpx;
	text-align: center;
	position:fixed;
	left:0;
	top:0;
	background:#fff;
	z-index:99;
	padding:0 10px;
}
.switchShop{
	width:25%;
}
.searchText{
	width:75%;
	background: #EAEAEA;
}
.slider{
	margin-top:40px;
}
.allCate{
	font-size: 102rpx;
}
.categoryList{
	margin:10px 0;
}
.category{
	padding:5px;
	width:20%;
	font-size:20rpx;
	background:#fff;
	-webkit-box-sizing:border-box;
	        box-sizing:border-box;
	text-align:center;
}
.cateImg{
	height: 110rpx;
	line-height: 110rpx;
}
.category ._img{
	width:80%;
	height: 100rpx;
}
