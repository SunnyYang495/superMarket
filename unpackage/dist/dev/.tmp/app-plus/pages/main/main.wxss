	padding:10px;
	background:#fff;
	margin-bottom: 70px ;
}
.goodsTitle{
	font-size:30rpx;
}
.goods{
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	width:50%;
	padding:5px;
	font-size: 24rpx;
	text-align: center;
}
.goodsImg{
	height: 280rpx;
	overflow: hidden;
	line-height: 280rpx;
	margin-bottom: 5px;
}
.goods ._img{
	width:100%;
}
